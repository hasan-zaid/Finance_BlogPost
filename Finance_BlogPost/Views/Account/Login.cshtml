@model Finance_BlogPost.Models.ViewModels.LoginViewModel
@{

}

<div class="row">
    <div class="col-6 d-flex justify-content-center align-items-center d-none d-md-block">
        <figure class="figure w-100 h-100 text-center mt-3">
            <img src="/images/login_banner.svg" class="figure-img img-fluid rounded h-100" alt="Login Banner" data-aos="fade-up">
        </figure>
    </div>
    <div class="col-md-6 p-5 d-flex flex-column justify-content-center align-items">
        <p class="display-4 landing-page-heading text-center mt-3">Welcome back!</p>
        <form class="p-3" method="post">
            <div class="form-group mb-4">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" class="form-control" asp-for="Username" required />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
            <div class="form-group mb-4">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-control" asp-for="Password" required />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="d-flex justify-content-center align-items-center mt-5">
                <button type="submit" class="btn light-btn">Sign In</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            AOS.init();
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")

}