@model List<Finance_BlogPost.Models.Domain.BlogPost>
@{
    int nextPage = Convert.ToInt32(ViewBag.PageNumber) + 1;
    int prevPage = Convert.ToInt32(ViewBag.PageNumber) - 1;
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Your BlogPosts</h1>
    </div>
</div>


<form method="get"
      asp-controller="AuthorBlogPosts" ,
      asp-action="List">
    <div class="container mt-5">
        <div class="row">
            <div class="col col-md-3 d-flex">
                <input type="text" class="form-control"
                       name="searchQuery" value="@ViewBag.SearchQuery" />
                <button type="submit" class="btn btn-warning ms-3">Search</button>
            </div>
        </div>
    </div>
</form>

<div class="container py-5">
    <div class="mb-3 d-flex justify-content-end">
        <a class="btn btn-dark" asp-controller="AuthorBlogPosts" asp-action="Add">
            Create Blog Post
        </a>
    </div>
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>
                        Heading
                        <span>
                            <span>
                                <a class="btn btn-light"
                                   asp-controller="AuthorBlogPosts"
                                   asp-action="List"
                                   asp-route-sortBy="Heading"
                                   asp-route-sortDirection="Asc"
                                   asp-route-searchQuery="@ViewBag.SearchQuery">
                                    <i class="bi bi-arrow-up"></i>
                                </a>
                            </span>
                            <span>
                                <a class="btn btn-light"
                                   asp-controller="AuthorBlogPosts"
                                   asp-action="List"
                                   asp-route-sortBy="Heading"
                                   asp-route-sortDirection="Desc"
                                   asp-route-searchQuery="@ViewBag.SearchQuery">
                                    <i class="bi bi-arrow-down"></i>
                                </a>
                            </span>
                        </span>

                    </th>
                    <th>Tags</th>
                    <th>Approval Status</th>
                    <th>Visibility</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in blogPost.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>@blogPost.Approval</td>
                        <td>@blogPost.Visible</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="AuthorBlogPosts" asp-action="Edit" asp-route-id="@blogPost.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a onClick=Delete("delete/@blogPost.Id") class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="AuthorBlogPosts"
                       asp-action="List"
                       asp-route-pageNumber="@prevPage"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortBy="@ViewBag.SortBy"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="AuthorBlogPosts"
                           asp-action="List"
                           asp-route-pageNumber="@i"
                           asp-route-pageSize="@ViewBag.PageSize"
                           asp-route-sortBy="@ViewBag.SortBy"
                           asp-route-sortDirection="@ViewBag.SortDirection">
                            @i
                        </a>
                    </li>
                }


                <li class="page-item">
                    <a class="page-link"
                       asp-controller="AuthorBlogPosts"
                       asp-action="List"
                       asp-route-pageNumber="@nextPage"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortBy="@ViewBag.SortBy"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <p>No Blog Posts Found!</p>
    }

</div>




@section Scripts {
    @{
        <partial name="_DeleteConfirmation" />
    }
}