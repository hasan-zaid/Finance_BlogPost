@model Finance_BlogPost.Models.ViewModels.AddTagRequest
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="py-2">
    <div class="container">
        <a asp-controller="BlogTags" asp-action="List" class="btn dark-btn mb-5">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <h2>Add New Tag</h2>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" required />
            <span class="text-danger" asp-validation-for="DisplayName"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn dark-btn">Submit</button>
        </div>
    </form>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
