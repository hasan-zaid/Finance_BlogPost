@model Finance_BlogPost.Models.ViewModels.EditTagRequest
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="py-2">
    <div class="container">
        <a asp-controller="BlogTags" asp-action="List" class="btn dark-btn mb-5">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <h2>Edit Tag </h2>
    </div>
</div>


<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="Name" required/>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" id="displayName" class="form-control" asp-for="DisplayName" required/>
                <span class="text-danger" asp-validation-for="DisplayName"></span>
            </div>

            <div class="mb-3">

                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>

                </div>

            </div>

        </form>
    }
    else
    {
        <p>Tag not found!</p>
    }
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
